<p id="notice"></p>
<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <% @books.each do |book| %>
  <tbody>
<tr>
  <p><%= link_to 'show', book_path(book.id) %></p>
  </tr>
<tr></tr>
  </tbody>
  <% end %>
</table>
<h2>New book</h2>
<%= form_with model: @book, url: '/books', method: :post, local:true do |f| %>
<p>Title</p>
<%= f.text_field :title %>
<p>Body</p>
<%= f.text_area :body %>

<%= f.submit 'Create Book' %>
<% end %>
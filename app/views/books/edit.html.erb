<h1>Editing Book</h1>
<% if @book.errors.any? %>
<div @book="error_explanation">
  <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
</div>
<ul>
  <% @book.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ul>
<% end %>
<%=  form_with model: @book, local:true do |f| %>
<div class="field">
  <%= f.label :title, 'Title' %>
  <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body, 'Body' %>
  <%= f.text_area :body %>
  </div>
  <div class="action">
  <%= f.submit 'Update Book' %>
  </div>
  <%= link_to 'Show', book_path(@book.id) %>
    |
  <%= link_to 'Back', "/books" %>

<% end %>